<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="asia.thesocialstreet.shopmax.app.CategoryOffers"
    tools:showIn="@layout/activity_category_offers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Electronics"
        android:id="@+id/forgotpassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Recommended offers"
        android:id="@+id/textView2"
        android:layout_below="@+id/forgotpassword"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView_Mobile"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/mobile"
            android:layout_below="@+id/forgotpassword"
            android:layout_marginLeft="30dp"
            android:layout_alignParentEnd="true"
            android:onClick="moboffer"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/floormap"
            android:layout_row="0"
            android:layout_column="15"
            android:layout_marginRight="30dp"
            android:src="@drawable/trimmer" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Samsung XYZ @ Rs.6000"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_marginLeft="30dp"
            android:layout_column="0" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Panasonic trimmer @ Rs.1500"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_marginRight="30dp"
            android:layout_column="15" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="30dp"
            android:src="@drawable/hdphn" />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView5"
            android:layout_row="2"
            android:layout_column="15"
            android:src="@drawable/hdd" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_row="3"
            android:layout_column="0" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SkullCandy Headphone @ Rs.2000"
            android:id="@+id/textView5"
            android:layout_row="4"
            android:layout_marginLeft="30dp"
            android:layout_column="0" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Transencd HD @ Rs.4320"
            android:id="@+id/textView6"
            android:layout_row="4"
            android:layout_column="15" />
    </GridLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More offers"
        android:id="@+id/button_moreoffers"
        android:layout_below="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

</RelativeLayout>
